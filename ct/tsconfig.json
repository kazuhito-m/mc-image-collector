{
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "noImplicitAny": true,
        "strict": true,
        "target": "es6",
        "lib": [
            "es6"
        ],
        "types": [
            "node",
            "reflect-metadata"
        ],
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
